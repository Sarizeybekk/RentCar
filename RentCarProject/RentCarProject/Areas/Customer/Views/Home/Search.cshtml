

@model IEnumerable<RentCarProject.Models.Vehicle>
@{
    ViewData["Title"] = "Home Page";
}


<div class="row">
    @await Component.InvokeAsync("CategoryList")



    @if (Model.Count() > 0)
    {






        @foreach (var item in Model)
        {



            <div class="col-lg-3 col-md-6">
                <div class="row p-2">
                    <div class="col-12  p-1" style="border: 1px solid #bab700; border-radius: 5px;">
                        <div class="card" style="border:0px;">
                            <img src="@item.İmageUrl" class="card-img-top rounded" width="250" height="200" />
                            <div class="pl-1">
                                <p class="card-title text-primary"><b>@item.CarName</b></p>
                                <p class="card-title h5">Araç Modeli:<b style="color:#2c3e50">@item.CarModel</b></p>
                                <p class="card-title h5">Lisans Sürüş Yaşı: <b style="color:#2c3e50">@item.DriverLisenseAge</b></p>
                                @*<p class="card-title h5"> <b style="color:#2c3e50"> Minimum yaş:@item.MinimumAgeLimit</b></p>
                                    <p class="card-title h5"> <b style="color:#2c3e50">Günlük km limiti:@item.DailyKmLimit</b></p>
                                    <p class="card-title h5"> <b style="color:#2c3e50"> Şimdiki km:@item.CurrentKm</b></p>
                                    <p class="card-title h5"> <b style="color:#2c3e50"> Airbag:@item.AirBag.ToString()</b></p>*@
                                <p class="card-title h5">Bagaj Kapasitesi: <b style="color:#2c3e50">:@item.BaggageCapacity</b></p>
                                <p class="card-title h5">Koltuk Sayısı: <b style="color:#2c3e50">@item.SeatCount</b></p>
                                <p class="card-title text-primary">Firma Adı: <b>@item.Category.Name</b></p>
                            </div>

                            <div style="padding-left:5px;">
                                <p style="color:maroon"> Fiyat: <b class="">@item.DailyRentalPrice.ToString("0.00") ₺</b></p>
                            </div>
                        </div>
                        <div>
                            <a asp-action="Details" class="btn btn-secondary form-control" asp-route-id="@item.Id">Detay</a>
                        </div>
                    </div>
                </div>
            </div>
        }

    }
    else
    {
        <div class="alert alert-warning text-center">
            Bu şirkete ait araç bulunamadı...
        </div>
    }






</div>
