
@model RentCarProject.Models.ReservationCart

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post">
    <input hidden asp-for="VehicleId" />

    <br />
    <div class="container backgroundWhite">
        <div class="card">
            <div class="card-header bg-light text-light ml-0 row container">
                <div class="col-8 col-md-6">
                    <h1 class="text-primary">@Model.Vehicle.CarName</h1>
                </div>
                <div class="col-8 col-md-6 text-md-right pt-4">
                    <span class="badge badge-warning pt-2" style="height:30px;">@Model.Vehicle.Category.Name</span>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-8 col-lg-8">

                            <div class="row pl-2">
                                <h5 class="text-muted">Adet:@Model.Vehicle.Quantity</h5>
                            </div>

                            <div class="row pl-2">
                                <h5 class="text-muted">Fiyat:@Model.Vehicle.DailyRentalPrice.ToString("c")</h5>
                            </div>

                            <div class="row pl-2">
                                <h5 class="text-muted">Modeli:@Model.Vehicle.CarModel</h5>
                            </div>

                            <div class="row pl-2">
                                <h5 class="text-muted">lisans sürüş yaşı:@Model.Vehicle.DriverLisenseAge</h5>
                            </div>

                            <div class="row pl-2">
                                <h5 class="text-muted">minimum sürüş yaşı:@Model.Vehicle.MinimumAgeLimit</h5>
                            </div>

                            <div class="row pl-2">
                                <h5 class="text-muted">Günlük km limiti:@Model.Vehicle.DailyKmLimit</h5>
                            </div>


                            <div class="row pl-2">
                                <h5 class="text-muted">Şimdiki km:@Model.Vehicle.CurrentKm</h5>
                            </div>


                            <div class="row pl-2">
                                <h5 class="text-muted">Airbag:@Model.Vehicle.AirBag</h5>
                            </div>


                            <div class="row pl-2">
                                <h5 class="text-muted">Bagaj kapasitesi:@Model.Vehicle.BaggageCapacity</h5>
                            </div>


                            <div class="row pl-2">
                                <h5 class="text-muted">Koltuk sayısı:@Model.Vehicle.SeatCount</h5>
                            </div>

                            <div class="row pl-2">
                                <h5 class="text-muted">Bagaj kapasitesi:@Model.Vehicle.BaggageCapacity</h5>
                            </div>


                            <div class="row pl-2">
                                <div class="col-4 text-warning"><h4>Sayı</h4></div>
                                <div class="col-8">
                                    <input class="form-control"asp-for="Count"/>
                                </div>
                               
                            </div>
                        </div>

                        <div class="col-12 col-lg-3 offset-lg-1 text-center">
                            <img  src="@Model.Vehicle.İmageUrl" width:"100" class="rounded"/>
                         </div>
                        </div>
                    </div>

                </div>


            <div class="card-footer">
                <div class="row">
                    <div class="col-8 col-md-6 pb-1">
                        <a asp-action="Index" class="btn btn-success form-control btn-square btn-lg" style="height:50px;">Anasayfa</a>
                    </div>
                    <div class="col-8 col-md-6 pb-1">
                        <button type="submit" value="Add to Cart" class="btn btn-warning btn-square btn-lg form-control"style="height:50px;" >Rezervasyon yap</button>

                    </div>
                
            </div>
            </div>
        </div>
    </div>


</form>











                       